@model TravelBlogAgain.Models.Person
@{
    ViewData["Title"] = "Experience Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new Person</h2>
<hr />

@using (Html.BeginForm())
{
    <label>Name</label>
    @Html.EditorFor(model => model.Name)

    <label>Adventure Rating</label>
    <select id="AdventureRating" name="AdventureRating">
        <option>5</option>
        <option>4</option>
        <option>3</option>
        <option>2</option>
        <option>1</option>
    </select>

    @foreach (var experience in ViewBag.ExperiencesList)
    {
        <input type="checkbox" name="experience_person" value=@experience.ExpId />@experience.Activity
    }

    <input type="submit" value="Create" class="btn btn-default" />
}

@Html.ActionLink("Back Home", "Index", "Locations")