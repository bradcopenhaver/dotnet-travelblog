@model TravelBlogAgain.Models.Location


@{
    ViewData["Title"] = "Item - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a New Location Entry</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Lat)
        @Html.EditorFor(model => model.Lat)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Lon)
        @Html.EditorFor(model => model.Lon)
    </div>
    <input type="submit" value="Create" class="btn btn-info" />
}

@Html.ActionLink("Back to Home Page", "Index")