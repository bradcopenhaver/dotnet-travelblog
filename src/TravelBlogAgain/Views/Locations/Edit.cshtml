@model TravelBlogAgain.Models.Location


@{
    ViewData["Title"] = "Location - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit A Location Entry</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model =>model.LocationId)

    <div class="form-group">
        <label>Name</label>
        <input class="form-control" @Html.EditorFor(model => model.Name)
    </div>

    <div class="form-group">
        <label>Latitude</label>
        <input class="form-control" @Html.EditorFor(model => model.Lat)
    </div>

    <div class="form-group">
        <label>Longitude</label>
       <input class="form-control" @Html.EditorFor(model => model.Lon)
    </div>
    <input type="submit" value="Edit" class="btn btn-info" />
}

@Html.ActionLink("Back to Home Page", "Index")